<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Main2Activity">

    <com.kyc.favorapp.view.DragBubbleView
            android:id="@+id/dragbubbleview"
            android:layout_width="20dp"
            app:bubble_radius="10dp"
            app:bubble_text="99"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:bubble_color="@android:color/holo_red_dark"
            app:bubble_textSize="10dp"
            app:bubble_textColor="@android:color/white"
            android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>